<!DOCTYPE html>
<html>
  <head>
    <title>DudePolicyExample1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <p style="color: blue;"><%= notice %></p>
    <p style="color: red;"><%= alert %></p>
    <p>
      <%= link_to 'articles', articles_path %> 
      <%= link_to 'users', users_path %>
      <% if current_user %>
        <%= link_to 'signout', destroy_user_session_path  %>
      <% else %>
        <strong><%= link_to 'sign in', new_user_session_path  %></strong>
      <% end %>
    </p>
    <hr>

    <%= yield %>
  </body>
</html>
